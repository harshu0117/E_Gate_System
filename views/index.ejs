    <main id="main" class="container">
        <h1>Registering for Guests and Residents</h1>
        <form id="registration-form" method="POST" action="/" >
            
            <div class="form-group">
                <label for="userType">Register as:</label>
                <select name="userType" id="userType">
                    <option value="guest">Guest</option>
                    <option value="resident">College Resident</option>
                </select>
            </div>

            <div class="myName">
                <label for="name">Name:</label>
                <input type="text" name="name" id="name" required placeholder="Enter Your Name">
            </div>

            <div class="myEmail">
                <label for="email">Email:</label>
                <input type="email" name="email" id="email" required placeholder="Enter Your Email">
            </div>

            <div class="myPhone">
                <label for="phone">Phone Number:</label>
                <input type="tel" name="phone" id="phone" required placeholder="Enter Phone Number">
            </div>

            <div class="myRoll" id="rollNumberDiv">
                <label for="rollNumber">Roll Number (For Residents only):</label>
                <input type="text" name="rollNumber" id="rollNumber" placeholder="Enter Roll Number">
            </div>

            <button type="submit" onsubmit="(e) => {
                e.preventDefault();
            }" >Register</button>
        </form>
        

        <div id="qr-container"></div>
        
